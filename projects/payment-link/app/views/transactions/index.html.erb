<h1 class="text-2xl font-semibold text-gray-800">Transaction List</h1>

<table class="min-w-full divide-y divide-gray-200 mt-6">
  <thead>
    <tr>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created At</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <% @transactions.each do |transaction| %>
      <tr>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= transaction.id %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= transaction.product.name %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Rp<%= transaction.amount %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= transaction.status %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= transaction.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
          <% if transaction.status != 'paid' %>
            <%= button_to 'Pay', payments_path(transaction_id: transaction.id), method: :post, class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500' %>
          <% else %>
            <span class="text-green-500">Paid</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create New Transaction', new_transaction_path, class: 'mt-6 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
