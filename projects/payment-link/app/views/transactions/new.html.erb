<%= link_to "Back", transactions_path %>

<%= form_with(model: @transaction, local: true, class: 'space-y-6') do |f| %>
  <!-- Product Selection -->
  <div class="form-group">
    <%= f.label :product_id, 'Product', class: 'block text-sm font-medium text-gray-700' %>
    <%= f.collection_select :product_id, @products, :id, :name, { prompt: 'Select a Product' }, class: 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
  </div>  

  <!-- Submit Button -->
  <div class="actions">
    <%= f.submit 'Create Transaction', class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
<% end %>
